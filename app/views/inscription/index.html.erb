			0 4px 12px rgba(16, 185, 129, 0.15);
		transform: translateY(-1px);
	}

	.form-control::placeholder {
		color: #9ca3af;
	}

	.input-group {
		display: flex;
		align-items: center;
		position: relative;
	}

	.input-prefix {
		position: absolute;
		left: 1rem;
		color: #059669;
		font-weight: 700;
		font-size: 1.1rem;
		pointer-events: none;
		z-index: 1;
	}

	.form-control.has-prefix {
		padding-left: 2.5rem;
	}

	.form-text {
		color: #6b7280;
		font-size: 0.85rem;
		margin-top: 0.25rem;
		display: flex;
		align-items: center;
		gap: 0.25rem;
	}

	.form-text::before {
		content: 'ℹ️';
		font-size: 0.75rem;
	}

	.alert {
		padding: 1.25rem;
		border-radius: 12px;
		margin-bottom: 1.5rem;
		display: flex;
		gap: 1rem;
		align-items: flex-start;
	}

	.alert-error {
		background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
		border: 2px solid #fca5a5;
	}

	.alert-icon {
		font-size: 1.5rem;
		flex-shrink: 0;
	}

	.alert-content {
		flex: 1;
	}

	.alert h4 {
		margin: 0 0 0.5rem 0;
		font-size: 0.95rem;
		font-weight: 600;
		color: #991b1b;
	}

	.alert ul {
		margin: 0;
		padding-left: 1.25rem;
	}

	.alert li {
		font-size: 0.9rem;
		color: #dc2626;
		margin-bottom: 0.25rem;
	}

