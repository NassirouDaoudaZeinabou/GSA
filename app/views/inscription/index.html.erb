<section class="inscription-page">
	<div class="login-link-container">
		<p class="login-prompt">Administrateur ?</p>
		<%= link_to 'Se connecter', new_user_session_path, class: 'login-link' %>
	</div>

	<div class="container">
		<header class="page-header">
			<div class="header-icon">
				<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
					<circle cx="9" cy="7" r="4"></circle>
					<path d="M22 21v-2a4 4 0 0 0-3-3.87"></path>
					<path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
				</svg>
			</div>
			<h1>Inscription client</h1>
			<p class="subtitle">Remplissez le formulaire ci-dessous pour ajouter un nouveau client. Cette page est publique.</p>
		</header>

		<%= form_with model: @client, url: inscription_path, local: true, class: 'client-form' do |f| %>
			<% if @client.errors.any? %>
				<div class="alert alert-error">
					<div class="alert-icon">⚠️</div>
					<div class="alert-content">
						<h4><%= pluralize(@client.errors.count, "erreur") %> empêche l'enregistrement :</h4>
						<ul>
							<% @client.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							<% end %>
						</ul>
					</div>
				</div>
			<% end %>

			<div class="form-group">
				<%= f.label :nom, class: 'form-label' do %>
					<span class="label-text">Nom du client</span>
					<span class="required-badge">Requis</span>
				<% end %>
				<%= f.text_field :nom, 
					class: 'form-control', 
					placeholder: 'Ex: Entreprise SARL',
					required: true,
					aria: { describedby: 'nom-help' } %>
				<small id="nom-help" class="form-text">Le nom complet du client ou de l'entreprise</small>
			</div>

			<div class="form-group">
				<%= f.label :adresse, class: 'form-label' do %>
					<span class="label-text">Adresse complète</span>
					<span class="required-badge">Requis</span>
				<% end %>
				<%= f.text_area :adresse, 
					class: 'form-control', 
					rows: 3,
					placeholder: 'Ex: 123 Rue de la République, 75001 Paris',
					required: true,
					aria: { describedby: 'adresse-help' } %>
				<small id="adresse-help" class="form-text">Adresse postale complète incluant code postal et ville</small>
			</div>

			<div class="form-group">
				<%= f.label :budget_total_alloue, class: 'form-label' do %>
					<span class="label-text">Budget total alloué</span>
					<span class="required-badge">Requis</span>
				<% end %>
				<div class="input-group">
					<span class="input-prefix">€</span>
					<%= f.number_field :budget_total_alloue, 
						step: '0.01', 
						min: '0',
						class: 'form-control has-prefix', 
						placeholder: '0.00',
						required: true,
						aria: { describedby: 'budget-help' } %>
				</div>
				<small id="budget-help" class="form-text">Montant en euros (ex: 5000.00)</small>
			</div>

			<div class="form-actions">
				<%= f.submit 'Enregistrer le client', class: 'btn btn-primary' %>
				<%= link_to root_path, class: 'btn btn-secondary' do %>
					<span>Annuler</span>
				<% end %>
			</div>
		<% end %>
	</div>
</section>

<style>
