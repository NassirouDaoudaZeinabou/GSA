  <script>
    function updateTime() {
      const now = new Date();
      const hours = String(now.getHours()).padStart(2, '0');
      const minutes = String(now.getMinutes()).padStart(2, '0');
      document.getElementById('updateTime').textContent = `${hours}:${minutes}`;
    }

    function animateValue(id, start, end, duration) {
      const obj = document.getElementById(id);
      const range = end - start;
      const increment = end > start ? 1 : -1;
      const stepTime = Math.abs(Math.floor(duration / range));
      let current = start;
      
      const timer = setInterval(() => {
        current += increment;
        obj.textContent = current.toLocaleString('fr-FR');
        if (current === end) {
          clearInterval(timer);
        }
      }, stepTime);
    }

    function refreshData() {
      const btn = document.querySelector('.refresh-btn');
      btn.style.transform = 'rotate(360deg)';
      
      setTimeout(() => {
        btn.style.transform = 'rotate(0deg)';
        updateTime();
        
        // Animations
        animateValue('clientsCount', 1200, 1247, 1000);
        animateValue('agentsCount', 150, 156, 1000);
        animateValue('etabsCount', 85, 89, 1000);
        animateValue('transactionsCount', 3800, 3842, 1000);
      }, 300);
    }

    // Initialize
    updateTime();
    setInterval(updateTime, 60000);
    
    // Animate numbers on load
    window.addEventListener('load', () => {
      animateValue('clientsCount', 0, 1247, 1500);
      animateValue('agentsCount', 0, 156, 1500);
      animateValue('etabsCount', 0, 89, 1500);
      animateValue('transactionsCount', 0, 3842, 1500);
    });
