    align-items: center;
    gap: 16px;
    transition: all 0.3s ease;
    border-left: 4px solid #2E7D32;
  }

  .stat-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(46, 125, 50, 0.15);
  }

  .stat-icon {
    font-size: 36px;
    line-height: 1;
  }

  .stat-content {
    flex: 1;
  }

  .stat-value {
    font-size: 32px;
    font-weight: 700;
    color: #2E7D32;
    line-height: 1.2;
  }

  .stat-label {
    font-size: 14px;
    color: #757575;
    margin-top: 4px;
    font-weight: 500;
  }

  .stat-trend {
    font-size: 13px;
    font-weight: 600;
    padding: 4px 8px;
    border-radius: 6px;
  }

  .stat-trend.positive {
    background: #E8F5E9;
    color: #2E7D32;
  }

  /* Summary Cards */
  .summary-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 20px;
    margin-bottom: 32px;
  }

  .summary-card {
    background: linear-gradient(135deg, #2E7D32 0%, #43A047 100%);
    padding: 28px;
    border-radius: 12px;
    box-shadow: 0 4px 12px rgba(46, 125, 50, 0.2);
    color: white;
    display: flex;
    gap: 20px;
    transition: transform 0.3s ease;
  }

  .summary-card:hover {
    transform: translateY(-4px);
  }

  .summary-icon {
    font-size: 48px;
    line-height: 1;
  }

  .summary-content {
    flex: 1;
  }

  .summary-card h3 {
    font-size: 16px;
    font-weight: 500;
    margin: 0 0 12px 0;
    opacity: 0.95;
  }

