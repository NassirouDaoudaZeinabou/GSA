<section class="admin-dashboard">
  <header class="dashboard-header">
    <div>
      <h1>Tableau de bord</h1>
      <p class="muted">Vue d'ensemble rapide ‚Äî statistiques en temps r√©el</p>
    </div>
    <div class="header-actions">
      <span class="last-update">Derni√®re mise √† jour : <%= Time.current.strftime("%H:%M") %></span>
    </div>
  </header>

  <div class="stats-grid">
    <div class="stat-card stat-clients">
      <div class="stat-icon">üë•</div>
      <div class="stat-content">
        <div class="stat-value"><%= number_with_delimiter(@clients_count || 0) %></div>
        <div class="stat-label">Clients</div>
      </div>
      <div class="stat-trend positive">+12%</div>
    </div>

    <div class="stat-card stat-agents">
      <div class="stat-icon">üéß</div>
      <div class="stat-content">
        <div class="stat-value"><%= number_with_delimiter(@agents_count || 0) %></div>
        <div class="stat-label">Agents</div>
      </div>
      <div class="stat-trend positive">+5%</div>
    </div>

    <div class="stat-card stat-etabs">
      <div class="stat-icon">üè¢</div>
      <div class="stat-content">
        <div class="stat-value"><%= number_with_delimiter(@etabs_count || 0) %></div>
        <div class="stat-label">√âtablissements</div>
      </div>
      <div class="stat-trend positive">+8%</div>
    </div>

    <div class="stat-card stat-transactions">
      <div class="stat-icon">üí≥</div>
      <div class="stat-content">
        <div class="stat-value"><%= number_with_delimiter(@transactions_count || 0) %></div>
        <div class="stat-label">Transactions</div>
      </div>
      <div class="stat-trend positive">+23%</div>
    </div>
  </div>

  <section class="summary-cards">
    <div class="summary-card">
      <div class="summary-icon">üí∞</div>
      <div class="summary-content">
        <h3>Total budgets allou√©s</h3>
        <div class="summary-value"><%= number_to_currency(@total_budget_clients || 0, unit: "‚Ç¨") %></div>
        <div class="summary-progress">
          <div class="progress-bar">
            <div class="progress-fill" style="width: 75%"></div>
          </div>
          <span class="progress-label">75% utilis√©</span>
        </div>
      </div>
    </div>
    
    <div class="summary-card">
      <div class="summary-icon">üìä</div>
      <div class="summary-content">
        <h3>Total d√©penses</h3>
        <div class="summary-value"><%= number_to_currency(@total_depenses || 0, unit: "‚Ç¨") %></div>
        <div class="summary-progress">
          <div class="progress-bar">
            <div class="progress-fill" style="width: 60%"></div>
          </div>
          <span class="progress-label">60% du budget</span>
        </div>
      </div>
    </div>
  </section>

  <section class="recent-activity">
    <div class="section-header">
      <h2>Activit√© r√©cente</h2>
      <a href="/admin/transactions" class="view-all">Voir tout ‚Üí</a>
    </div>
    
    <% if defined?(@recent_transactions) && @recent_transactions.present? %>
      <div class="table-container">
        <table class="recent-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Montant</th>
              <th>Date</th>
              <th>Client</th>
              <th>Statut</th>
            </tr>
          </thead>
          <tbody>
            <% @recent_transactions.each do |t| %>
              <tr>
                <td><span class="badge badge-id">#<%= t.id %></span></td>
                <td class="amount"><%= number_to_currency(t.montant || 0, unit: "‚Ç¨") %></td>
                <td><%= (t.created_at && l(t.created_at, format: :short)) rescue (t.created_at || '-') %></td>
                <td><%= (t.respond_to?(:client) && t.client.present?) ? (t.client.try(:nom) || t.client.try(:name)) : '-' %></td>
                <td><span class="badge badge-success">Valid√©</span></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="empty-state">
        <div class="empty-icon">üì≠</div>
        <p class="muted">Aucune transaction r√©cente.</p>
      </div>
    <% end %>
  </section>
</section>

<style>
