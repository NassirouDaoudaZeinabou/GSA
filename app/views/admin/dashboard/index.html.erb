    padding: 32px;
    background: #f5f5f5;
    min-height: 100vh;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
  }

  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 32px;
  }

  .dashboard-header h1 {
    font-size: 32px;
    font-weight: 700;
    color: #2E7D32;
    margin: 0 0 8px 0;
  }

  .muted {
    color: #757575;
    font-size: 14px;
    margin: 0;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .last-update {
    font-size: 13px;
