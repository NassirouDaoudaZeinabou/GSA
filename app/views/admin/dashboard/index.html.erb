  }

  /* Responsive */
  @media (max-width: 768px) {
    .admin-dashboard {
      padding: 20px;
    }

    .dashboard-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }

    .summary-cards {
      grid-template-columns: 1fr;
    }

    .recent-table {
      font-size: 13px;
    }

    .recent-table th,
