<style>
/* Variables - Palette émeraude */
:root {
  --sidebar-width: 280px;
  --sidebar-bg: #ffffff;
  --sidebar-border: #e5e7eb;
  --brand-color: #10b981;
  --brand-color-dark: #059669;
  --text-primary: #1f2937;
  --text-secondary: #6b7280;
  --text-muted: #9ca3af;
  --nav-hover: #f0fdf4;
  --nav-active: #10b981;
  --nav-active-bg: #d1fae5;
  --badge-bg: #ef4444;
  --badge-text: #ffffff;
  --divider-color: #e5e7eb;
  --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Sidebar Container */
.admin-sidebar {
  width: var(--sidebar-width);
  height: 100vh;
  background: var(--sidebar-bg);
  border-right: 1px solid var(--sidebar-border);
  display: flex;
  flex-direction: column;
  position: fixed;
  left: 0;
  top: 0;
  overflow-y: auto;
  overflow-x: hidden;
  box-shadow: var(--shadow);
}

/* Custom Scrollbar */
.admin-sidebar::-webkit-scrollbar {
  width: 6px;
}

.admin-sidebar::-webkit-scrollbar-track {
  background: transparent;
}

.admin-sidebar::-webkit-scrollbar-thumb {
  background: #d1d5db;
  border-radius: 3px;
}

.admin-sidebar::-webkit-scrollbar-thumb:hover {
  background: #9ca3af;
}

/* Brand Section */
.brand {
  padding: 1.5rem 1.25rem;
  border-bottom: 1px solid var(--sidebar-border);
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.03) 0%, transparent 100%);
}

.brand-link {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  text-decoration: none;
  transition: var(--transition);
}

.brand-link:hover .brand-logo {
  transform: rotate(180deg) scale(1.1);
}

.brand-logo {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 42px;
  height: 42px;
  background: linear-gradient(135deg, var(--brand-color) 0%, var(--brand-color-dark) 100%);
  border-radius: 12px;
  color: white;
  transition: var(--transition);
  box-shadow: 0 4px 12px rgba(16, 185, 129, 0.25);
}

.brand-text {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: -0.02em;
}

.brand-dot {
  color: var(--brand-color);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.7;
    transform: scale(1.2);
  }
}

/* Navigation Section */
.nav-section {
  flex: 1;
  padding: 1.5rem 0;
  overflow-y: auto;
}

.nav-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.nav-item {
  margin: 0;
  padding: 0 1rem;
}

.nav-link {
  display: flex;
  align-items: center;
  gap: 0.875rem;
  padding: 0.875rem 1rem;
  margin: 0.25rem 0;
  color: var(--text-secondary);
  text-decoration: none;
  border-radius: 10px;
  transition: var(--transition);
  position: relative;
  overflow: hidden;
  font-size: 0.9375rem;
  font-weight: 500;
  border: none;
  background: transparent;
  width: 100%;
  cursor: pointer;
}

.nav-link::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 3px;
  height: 100%;
  background: var(--brand-color);
  transform: scaleY(0);
  transition: var(--transition);
  border-radius: 0 3px 3px 0;
}

.nav-link:hover {
  background: var(--nav-hover);
  color: var(--text-primary);
  transform: translateX(4px);
}

.nav-link:hover::before {
  transform: scaleY(1);
}

.nav-link.active {
  background: var(--nav-active-bg);
  color: var(--text-primary);
  font-weight: 600;
}

.nav-link.active::before {
  transform: scaleY(1);
}

.nav-link.active .nav-icon {
  color: var(--brand-color);
  transform: scale(1.1);
}

.nav-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20px;
  height: 20px;
  transition: var(--transition);
  flex-shrink: 0;
}

.nav-text {
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.nav-badge {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 22px;
  height: 22px;
  padding: 0 0.5rem;
  background: var(--badge-bg);
  color: var(--badge-text);
  border-radius: 11px;
  font-size: 0.75rem;
  font-weight: 600;
  animation: badge-pop 0.3s ease-out;
}

@keyframes badge-pop {
  0% {
    transform: scale(0);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

.nav-divider {
  height: 1px;
  background: var(--divider-color);
  margin: 1rem 1.5rem;
  opacity: 0.5;
}

/* Sidebar Footer */
.sidebar-footer {
  padding: 1rem;
  border-top: 1px solid var(--sidebar-border);
  background: linear-gradient(0deg, rgba(0, 0, 0, 0.2) 0%, transparent 100%);
}

.user-profile {
  display: flex;
  align-items: center;
  gap: 0.875rem;
  padding: 0.875rem;
  margin-bottom: 0.5rem;
  background: var(--nav-hover);
  border-radius: 10px;
  transition: var(--transition);
  cursor: pointer;
}

.user-profile:hover {
  background: #f3f4f6;
  transform: translateY(-2px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
}

.user-avatar {
  width: 40px;
  height: 40px;
  background: linear-gradient(135deg, var(--brand-color) 0%, var(--brand-color-dark) 100%);
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  font-size: 0.875rem;
  flex-shrink: 0;
  box-shadow: 0 2px 8px rgba(16, 185, 129, 0.25);
}

.user-info {
  flex: 1;
  min-width: 0;
}

.user-name {
  color: var(--text-primary);
  font-size: 0.875rem;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 0.125rem;
}

.user-role {
  color: var(--text-muted);
  font-size: 0.75rem;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.logout-form {
  margin: 0;
  padding: 0;
}

.nav-link.logout {
  color: #f87171;
  justify-content: flex-start;
  padding: 0.75rem 1rem;
}

.nav-link.logout:hover {
  background: rgba(248, 113, 113, 0.1);
  color: #ef4444;
}

.nav-link.logout:hover .nav-icon {
  transform: translateX(4px);
}

/* Responsive */
@media (max-width: 768px) {
  .admin-sidebar {
    width: 100%;
    position: relative;
    height: auto;
  }
}

/* Smooth Animations */
@media (prefers-reduced-motion: no-preference) {
  .nav-link,
  .brand-logo,
  .user-profile {
    will-change: transform;
  }
}
</style>